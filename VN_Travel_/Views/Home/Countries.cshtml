@model IEnumerable<VN_Travel_.DAL.Models.CountryModel>
@{
    ViewData["Title"] = "Страны";
}

<section>
    <h2 class="section-title">Направления</h2>

    <div class="grid">

        <!-- ITALY -->
        <div class="card">
            <img src="https://images.unsplash.com/photo-1516483638261-f4dbaf036963?auto=format&fit=crop&w=600&q=80" alt="Italy">
            <div class="card-content">
                <h3>Италия</h3>
                <p>Колыбель культуры и искусства.</p>
                <a asp-controller="Home"
                   asp-action="CountryDetails"
                   asp-route-id="1"
                   class="btn-main">
                    Подробнее
                </a>
            </div>
        </div>

        <!-- SPAIN -->
        <div class="card">
            <img src="https://images.unsplash.com/photo-1509840841025-9088ba78a826?auto=format&fit=crop&w=600&q=80" alt="Spain">
            <div class="card-content">
                <h3>Испания</h3>
                <p>Солнце, пляжи и фламенко.</p>
                <a asp-controller="Home"
                   asp-action="CountryDetails"
                   asp-route-id="2"
                   class="btn-main">
                    Подробнее
                </a>
            </div>
        </div>

        <!-- FRANCE -->
        <div class="card">
            <img src="https://images.unsplash.com/photo-1502602898657-3e91760cbb34?auto=format&fit=crop&w=600&q=80" alt="France">
            <div class="card-content">
                <h3>Франция</h3>
                <p>Романтика, мода и искусство.</p>
                <a asp-controller="Home"
                   asp-action="CountryDetails"
                   asp-route-id="3"
                   class="btn-main">
                    Подробнее
                </a>
            </div>
        </div>

    </div>
</section>
