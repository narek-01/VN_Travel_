<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VN Travel — @ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="nav-container">
            <a asp-controller="Home" asp-action="Index" class="logo">VN TRAVEL</a>
            <div class="nav-links">
                <a asp-controller="Home" asp-action="Index">Главная</a>
                <a asp-controller="Home" asp-action="Countries">Страны</a>
                <a asp-controller="Home" asp-action="Hotels">Отели</a>
                <a asp-controller="Home" asp-action="Tours">Туры</a>
            </div>
            <a href="#" class="btn-main">Забронировать</a>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer style="text-align: center; padding: 40px; background: #1a1a1a; color: white; margin-top: 50px;">
        <p>&copy; 2024 - VN Travel Agency. Все права защищены.</p>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>