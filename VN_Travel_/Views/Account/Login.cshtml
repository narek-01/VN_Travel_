@{
    ViewData["Title"] = "Вход";
}

<div class="auth-wrapper">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-icon">
                <i class="fas fa-lock"></i>
            </div>
            <h2>С возвращением!</h2>
            <p>Войдите, чтобы управлять вашими бронированиями</p>
        </div>

        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="form-group">
                <label class="form-label">Email / Логин</label>
                <div class="input-with-icon">
                    <i class="fas fa-envelope"></i>
                    <input type="text" name="Email" class="form-control" placeholder="mail@example.com" required />
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Пароль</label>
                <div class="input-with-icon">
                    <i class="fas fa-key"></i>
                    <input type="password" name="Password" class="form-control" placeholder="••••••••" required />
                </div>
            </div>

            <button type="submit" class="btn-auth-primary">Войти в систему</button>
        </form>

        <div class="auth-footer">
            <span>Впервые у нас?</span>
            <a asp-controller="Account" asp-action="Register">Создать аккаунт</a>
        </div>
    </div>
</div>

<style>
    .auth-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        font-family: 'Inter', sans-serif;
    }

    .auth-card {
        background: #fff;
        padding: 40px;
        border-radius: 24px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.07);
        width: 100%;
        max-width: 420px;
        text-align: center;
        border: 1px solid #f0f0f0;
    }

    .auth-icon {
        width: 64px;
        height: 64px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.6rem;
        margin: 0 auto 20px;
        box-shadow: 0 8px 20px rgba(118, 75, 162, 0.25);
    }

    .auth-header h2 {
        font-weight: 800;
        color: #1a1a1a;
        margin-bottom: 8px;
        font-size: 1.7rem;
    }

    .auth-header p {
        color: #718096;
        font-size: 0.9rem;
        margin-bottom: 30px;
    }

    .form-group {
        text-align: left;
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        font-size: 0.85rem;
        color: #4a5568;
        margin-bottom: 8px;
        display: block;
    }

    .input-with-icon {
        position: relative;
    }

        .input-with-icon i {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #667eea;
        }

    .form-control {
        width: 100%;
        padding: 14px 16px 14px 48px;
        border-radius: 12px;
        border: 1.5px solid #edf2f7;
        background: #fdfdfd;
        box-sizing: border-box;
        font-size: 0.95rem;
        transition: 0.3s;
    }

        .form-control:focus {
            border-color: #667eea;
            outline: none;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        }

    .btn-auth-primary {
        width: 100%;
        padding: 15px;
        border: none;
        border-radius: 12px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        font-weight: 700;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 4px 15px rgba(118, 75, 162, 0.3);
    }

        .btn-auth-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(118, 75, 162, 0.4);
        }

    .auth-footer {
        margin-top: 25px;
        font-size: 0.95rem;
        color: #718096;
    }

        .auth-footer a {
            color: #764ba2;
            text-decoration: none;
            font-weight: 700;
            margin-left: 5px;
        }
</style>