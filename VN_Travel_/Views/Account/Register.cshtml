@model VN_Travel_.Models.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="font-weight-light my-2">Создать аккаунт</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="FirstName" class="form-control" placeholder="Имя" />
                            <label asp-for="FirstName">Ваше имя</label>
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email">Email адрес</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input asp-for="Password" class="form-control" type="password" placeholder="Пароль" />
                                    <label asp-for="Password">Пароль</label>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Повтор" />
                                    <label asp-for="ConfirmPassword">Повторите пароль</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 mb-0">
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-block">Зарегистрироваться</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a asp-action="Login">Уже есть аккаунт? Войти</a></div>
                </div>
            </div>
        </div>
    </div>
</div>